{
  "PFD template": {
    "prefix": "pfd",
    "body": [
      "```puml",
      "!include ./include/pfd_tool.pu",
      "!\\$space_delimiter = 1",
      "left to right direction",
      "skinparam linetype polyline",
      "skinparam linetype ortho",
      "",
      "\\$d( \\",
      "    \"out\", \\",
      "    \"in1,in2 c:in3\", \\",
      "    \"process\" \\",
      ")",
      "\\$c(\"#pink\", \"in1\")",
      "\\$cp(\"#skyblue\", \"process\")",
      "```"
    ],
    "description": "PFD template"
  },
  "draft process": {
    "prefix": "d",
    "body": [
      "\\$d( \\",
      "    \"out\", \\",
      "    \"in\", \\",
      "    \"process\" \\",
      ")"
    ],
    "description": "draft process"
  },
  "draft process from clipboard": {
    "prefix": "c",
    "body": [
      "\\$d( \\",
      "    \"$CLIPBOARD\", \\",
      "    \"$CLIPBOARD\", \\",
      "    \"Process${CURRENT_MINUTE}${CURRENT_SECOND}\" \\",
      ")"
    ],
    "description": "draft process from clipboard"
  },
  "reverse draft process from current line": {
    "prefix": "r",
    "body": [
      "",
      "${TM_CURRENT_LINE/\\$d\\(\"(.*)\"\\,\\s*\"(.*)\"\\,\\s*\"(.*)\"\\)r/$d(\"$2\", \"$1\", \"p\")/}"
    ],
    "description": "reverse draft process from current line"
  },
  "replace procedure from clipboard": {
    "prefix": "r",
    "body": [
      "\\$replace(\"$CLIPBOARD\")"
    ],
    "description": "replace procedure from clipboard"
  },
  "multi line note": {
    "prefix": "n",
    "body": [
      "note as n$CURRENT_MINUTE$CURRENT_SECOND",
      "",
      "end note",
      "n$CURRENT_MINUTE$CURRENT_SECOND .. YOUR_ALIAS",
      ""
    ],
    "description": "multi line note"
  },
  "multi line note to clipboard": {
    "prefix": "nc",
    "body": [
      "note as n$CURRENT_MINUTE$CURRENT_SECOND",
      "",
      "end note",
      "n$CURRENT_MINUTE$CURRENT_SECOND .. \\$replace(\"$CLIPBOARD\")",
      ""
    ],
    "description": "multi line note to clipboard"
  },
  "define color for deliverables": {
    "prefix": "c",
    "body": [
      "\\$c(\"#pink\", \"in1\")"
    ],
    "description": "define color for deliverables"
  },
  "define color for process": {
    "prefix": "cp",
    "body": [
      "\\$cp(\"#pink\", \"process\")"
    ],
    "description": "define color for process"
  },
  "CRT template": {
    "prefix": "crt",
    "body": [
      "```puml",
      "!include ./include/pfd_tool.pu",
      "!\\$space_delimiter = 1",
      "",
      "\\$crt( \\",
      "    \"UDE\", \\",
      "    \"cause1,cause2 cause3\" \\",
      ")",
      "\\$c(\"#pink\", \"UDE\")",
      "```"
    ],
    "description": "CRT template"
  },
  "cause and result": {
    "prefix": "cause",
    "body": [
      "\\$crt( \\",
      "    \"UDE\", \\",
      "    \"cause1,cause2 cause3\" \\",
      ")"
    ],
    "description": "Cause and Result"
  }
}